@page
@model BookListRazor.Pages.PublisherList.UpsertModel


<br />
<h2 class="text-info">@(Model.Publisher.Id != 0 ? "Edit":"Create")</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Publisher.Id != 0)
        {
            <input type="hidden" asp-for="Publisher.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Publisher.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Publisher.Name" class="form-control" />
            </div>
            <span asp-validation-for="Publisher.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button class="btn btn-primary form-control" type="submit">@(Model.Publisher.Id != 0 ? "Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>
